@using project1.ViewModel
@model CategoryVM
@section Title {
    Category Detales
}
@section HPath {
    Categories Page\Detales

}

<div class="card col-12">
    <div class="card-header">
        <h3 class="card-title">Category Detales</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th style="width:10px">#</th>
                    <th>Name</th>
                    <th>Create Time</th>
                    <th>Update Time</th>


                </tr>
            </thead>
            <tbody>
                @if (Model is null)
                {
                    <tr>
                        <td colspan="2">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Ther is No Category Detales</h3>
                                </div>

                            </div>
                        </td>
                    </tr>
                }
                else
                {
                   
                    
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Name</td>
                            <td>@Model.CreateTime
                            </td>
                            <td>@Model.UpdateTime</td>

                        </tr>


                }

            </tbody>
        </table>
        <div class="col-12">

            <a asp-action="Index" asp-controller="Categories" class="btn btn-secondary mt-3">Cancel</a>
        </div>
    </div>

</div>
